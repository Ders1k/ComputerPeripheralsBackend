generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  surname   String
  email     String   @unique
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  orders    Order[]
}

model Device {
  id          Int           @id @default(autoincrement())
  name        String
  price       String
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  img         String
  brandId     Int
  deviceBrand Brand         @relation(fields: [brandId], references: [id])
  typeId      Int
  deviceType  Type          @relation(fields: [typeId], references: [id])
  orders      OrderDevice[]
  deviceInfo  DeviceInfo[]
}

model Type {
  id        Int      @id @default(autoincrement())
  typeName  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  device    Device[]
}

model Brand {
  id        Int      @id @default(autoincrement())
  brandName String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  device    Device[]
}

model Order {
  id        Int           @id @default(autoincrement())
  userId    Int
  status    Status        @default(PENDING)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  user      User          @relation(fields: [userId], references: [id])
  devices   OrderDevice[]
}

model OrderDevice {
  id        Int      @id @default(autoincrement())
  quantity  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deviceId  Int
  device    Device   @relation(fields: [deviceId], references: [id])
  orderId   Int
  order     Order    @relation(fields: [orderId], references: [id])
}

model DeviceInfo {
  id        Int      @id @default(autoincrement())
  info      String
  deviceId  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  device    Device?  @relation(fields: [deviceId], references: [id])
}

enum Role {
  USER
  ADMIN
}

enum Status {
  APPROVED
  REJECTED
  PENDING
}
